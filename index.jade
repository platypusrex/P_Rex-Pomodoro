doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE-edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title P_Rex Weather
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Ruge+Boogie", rel="stylesheet", type="text/css")
        link(href="https://fonts.googleapis.com/css?family=Montserrat", rel="stylesheet", type="text/css")
        link(href="css/style.css", rel="stylesheet")
    body(ng-app='PomodoroClockApp')
        div.container(ng-controller='ClockCtrl')
            div.header-container
                h1 P_Rex Pomodoro
            div.time-title-container
                div.row
                    div.col-xs-5.col-xs-offset-1.col-sm-3.col-sm-offset-3.col-md-2.col-md-offset-4
                        p.lead Session Time
                    div.col-xs-5.col-sm-3.col-md-2
                        p.lead Break time
            div.time-control-container
                div.row
                    div.col-xs-5.col-xs-offset-1.col-sm-3.col-sm-offset-3.col-md-2.col-md-offset-4
                        div.input-group
                            span.input-group-btn
                                button.btn.btn-default(type='button', ng-click='subtractTime(1)')
                                    span.glyphicon.glyphicon-minus
                            input.form-control(type='text', ng-model='sessionTime')
                            span.input-group-btn
                                button.btn(type='button', ng-click='addTime(1)')
                                    span.glyphicon.glyphicon-plus
                    div.col-xs-5.col-sm-3.col-md-2
                        div.input-group
                            span.input-group-btn
                                button.btn.btn-default(type='button', ng-click='subtractTime()')
                                    span.glyphicon.glyphicon-minus
                            input.form-control(type='text', ng-model='breakTime')
                            span.input-group-btn
                                button.btn(type='button', ng-click='addTime()')
                                    span.glyphicon.glyphicon-plus
            div.clock-container
                h2 {{sessionName}}
                div.clock(ng-click='startTimer()')
                    div.content
                        h1(ng-style="{'height:' spanHeight, 'background': color}") {{showTime()}}
        script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js", type='text/javascript')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', type='text/javascript')
        script(src='js/pomodoro.js', type='text/javascript')
        script(src='js/pomodoroCtrl.js', type='text/javascript')